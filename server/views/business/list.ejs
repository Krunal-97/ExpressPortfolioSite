<% if(typeof displayName == 'string' && displayName) { %>
<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Main Content -->
<main class="container">
    <div class="row business-list">
        <div class="offset-md-1 col-md-11">
            <h1><%= title %></h1>
            <!-- <a href="/business-list/add" class="btn btn-primary" role="button">
            <i class="fas fa-plus-circle"></i> Add a Business</a>
            <br> -->
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <th class="text-center col-3">Name</th>
                    <th class="text-center col-3">Number</th>
                    <th class="text-center col-3">Email</th>
                    <th class="text-center col-3">Operations</th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < BusinessList.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-3"><%= BusinessList[count].name %></td>
                        <td class="text-center col-3"><%= BusinessList[count].number %></td>
                        <td class="text-center col-3"><%= BusinessList[count].email %></td>
                        <td class="text-center col-1.5">
                            <a href="/business-list/edit/<%= BusinessList[count]._id %>" class="btn btn-primary btn-sm edit-btn">
                            <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-1.5">
                            <a href="/business-list/delete/<%= BusinessList[count]._id %>" class="btn btn-danger btn-sm del-btn">
                            <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</main>

<%- include ../partials/bottom_nav.ejs %>  
<%- include ../partials/footer.ejs %>

<% } else { %>
    <script> document.location.href = '/login' </script>
<% } %>