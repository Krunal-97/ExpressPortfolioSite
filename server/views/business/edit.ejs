<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row edit">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Business Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Business Title"
                    name="name" 
                    value="<%= business.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="numberField">Number</label>
                    <input type="text" class="form-control"
                    id="numberField"
                    placeholder="Enter the Number"
                    name="number" 
                    value="<%= business.number %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the email"
                    name="email" 
                    value="<%= business.email %>"
                    required>
                </div>

                <button class="btn btn-primary edit-btn" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>                
                    <a href="/business-list" class="btn btn-warning edit-btn">
                        <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>  
<%- include ../partials/footer.ejs %>